@model IEnumerable<FinalProject.Areas.Identity.Data.FinalProjectUser>
@{
    ViewData["Title"] = "Index";
}

<center><h1>Welcome Admin</h1></center>
<style>
  
   

    .container {
        display: flex;
        justify-content: space-between;
        padding: 20px;
    }

    .box {
        width: 400px;
        height: 300px;
        background-color:white;
        transition: transform 0.3s, width 0.3s, height 0.3s, margin 0.3s;
        margin: 10px; 
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center; 
        border: none;
    }


    .box:hover {
            transform: scale(0.9);
            width: 450px;
            height: 400px;
            margin: 0; 
    }

    

</style>


<body style="background-color:white;">
    


    <br />
    <div class="container">
        <a asp-action="List" style="color:black;text-decoration: none;" class="box">
            <div>
                
                <img src="~/css/people.png"  width="200" height="200">
                <h2>View User List</h2>
            </div>
        </a>
        
        <a href="/Times/Dashboard" style="color:black;text-decoration: none;" class="box">
            <div>
                <img src="~/css/data.png" width="200" height="200">
                <h2>Dashboard</h2>
            </div>
        </a>

        <a asp-action="Weekly" style="color:black;text-decoration: none;" class="box">
            <div>
                <img src="~/css/analysis.png" width="200" height="200">
                <h2>Weekly Insight</h2>
            </div>
        </a>
        
        
        
    </div>
    
  
</body>
