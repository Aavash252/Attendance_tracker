@model IEnumerable<FinalProject.Areas.Identity.Data.FinalProjectUser>

@{
    ViewData["Title"] = "List";
}

<body style="background-color:white;">

    <style>
        /* Add some styling to the table */
        table {
            border-collapse: collapse;
            width: 100%;
            border: 1px solid #ccc; /* Border style and color */
        }

        th, td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd; /* Border between rows */
        }

        th {
            background-color: #f2f2f2;
        }
    </style>
<table>
    <tr>
        <th>  </th>
        <th>Name</th>
        <th>Email</th>
        <th>Info</th>
       
    </tr>
    @foreach (var user in Model)
    {
        <tr>
                <td>
                    @if (@user.Photo != null)
                    {
                        <img src="data:image/*;base64,@(Convert.ToBase64String(user.Photo))" style="width: 70px; height: 77px; object-fit: cover; border-radius: 30px" alt="Profile Photo" class="profile-photo" />
                    }
                    else
                    {

                        <img src="~/css/user.png" style="width: 70px; height: 77px; object-fit: cover; border-radius: 30px" alt="Default Photo" class="profile-photo" />
                    }
                </td>

            <td>
                <a href="@Url.Action("Graph", "User", new { userId = user.Id })">@user.FirstName</a>
            </td>
            <td>@user.Email</td>
            <td><a href="@Url.Action("Info", "User", new { userId = user.Id })">Info</a></td>
           
        </tr>
    }
    
</table>
</body>





