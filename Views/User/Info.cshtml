@model FinalProject.Areas.Identity.Data.FinalProjectUser

@{
    ViewData["Title"] = "Info";
}
<body style="background-color:powderblue;">
<h1>User Details</h1>

@if (Model != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>User Name</th>
                <th>Email</th>
                <th>Clock In</th>
                <th>Clock Out</th>
                <th>Time</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.FirstName</td>
                <td>@Model.Email</td>
                <td>
                    @foreach (var timeRecord in ViewBag.TimeRecords)
                    {
                        @timeRecord.Clock_In.ToString("yyyy-MMM-dd HH:mm")
                        <br />
                    }
                </td>
                <td>
                    @foreach (var timeRecord in ViewBag.TimeRecords)
                    {
                        @timeRecord.Clock_Out.ToString("yyyy-MMM-dd HH:mm")
                        <br />
                    }
                </td>
                <td>
                    @foreach (var timeRecord in ViewBag.TimeRecords)
                    {
                        var timeDifference = timeRecord.Clock_Out - timeRecord.Clock_In;

                        string formattedTime = string.Format("{0:D2}:{1:D2}",
                        (int)timeDifference.TotalHours, timeDifference.Minutes);

                        

                        @formattedTime
                        <br />
                    }

                </td>
            </tr>
        </tbody>
    </table>
}
</body>