@model IEnumerable<FinalProject.Areas.Identity.Data.TimeTable>

@{
    ViewData["Title"] = "Dashboard";
}

<style>
    .pagination a {
        margin-right: 5px; 
        margin-left:5px;
    }
</style>
<body style="background-color:white;">
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FinalProjectUser.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model=>model.FinalProjectUser.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clock_In)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clock_Out)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FinalProjectUser.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FinalProjectUser.Email)
                </td>
                <td>@item.Date.ToString("dd-MMM-yyyy")</td>

                <td>@item.Clock_In.ToString("dd-MM-yyyy HH:mm")</td>

                <td>@item.Clock_Out?.ToString("dd-MM-yyyy HH:mm")</td>
                
            </tr>
        }
    </tbody>
</table>
    @if (ViewBag.TotalPages > 1)
    {
        <div class="pagination">
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                if (i == ViewBag.CurrentPage)
                {
                    <span> @i </span>
                }
                else
                {
                    <a href="@Url.Action("Dashboard", new { page = i, pageSize = ViewBag.PageSize })">@i </a>
                }
                
            }
        </div>
    }

</body>
