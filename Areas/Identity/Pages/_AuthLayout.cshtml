@{
    Layout = "/Views/Shared/_Layout.cshtml";
}


<div class="row justify-content-center">
    <div class="col-5 mt-5 col-12 col-sm-12 col-md-8 col-xl-6">
        <div class="card login-logout-card">
            <div class="card-body">
            
                <div class="row justify-content-center">
                    <div class="col-10 my-4">
                        @RenderBody()
                    </div>
                </div>
            </div>
            <div class="text-center mt-3" id="registerLinkContainer">
                <a href="/Identity/Account/Register" class="btn btn-link" id="registerLink">Register a new account</a>
            </div>
        </div>
       
    </div>
</div>

@section Scripts {
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        $(function () {
            const currentPage = location.pathname;
            $('.nav-tabs li a').each(function () {
                const $this = $(this);
                if (currentPage.toLowerCase().indexOf($this.attr('href').toLowerCase()) !== -1) {
                    $this.addClass('active');
                }
            });
            if (currentPage.toLowerCase().indexOf("/identity/account/register") !== -1) {
                document.getElementById("registerLinkContainer").style.display = "none";
            }
        });
    </script>
}
